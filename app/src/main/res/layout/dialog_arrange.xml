<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    android:background = "@color/colorPrimary"
    android:layoutDirection = "rtl"
    android:orientation = "vertical"
    android:padding = "8dp">

    <LinearLayout
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:gravity = "center">

        <ImageView
            android:layout_width = "32dp"
            android:layout_height = "32dp"
            android:layout_marginEnd = "8dp"
            android:src = "@drawable/ic_date"
            android:tint = "@color/colorAccent" />

        <TextView
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_weight = "0.9"
            android:text = "@string/transaction_date"
            android:textColor = "@color/colorWhiteT80"
            android:textSize = "18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content">

        <TextView
            android:id = "@+id/btnNewest"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_margin = "8dp"
            android:layout_weight = "0.5"
            android:background = "@drawable/bg_arrange_button_unselected"
            android:gravity = "center"
            android:text = "@string/newest"
            android:textColor = "@color/colorAccentSecondary"
            android:textSize = "18sp" />

        <TextView
            android:id = "@+id/btnOldest"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_margin = "8dp"
            android:layout_weight = "0.5"
            android:background = "@drawable/bg_arrange_button_unselected"
            android:gravity = "center"
            android:text = "@string/oldest"
            android:textColor = "@color/colorAccentSecondary"
            android:textSize = "18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_marginTop = "8dp"
        android:gravity = "center">

        <ImageView
            android:layout_width = "32dp"
            android:layout_height = "32dp"
            android:layout_marginEnd = "8dp"
            android:src = "@drawable/ic_amount"
            android:tint = "@color/colorAccent" />

        <TextView
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_weight = "0.9"
            android:text = "@string/transaction_amount"
            android:textColor = "@color/colorWhiteT80"
            android:textSize = "18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content">

        <TextView
            android:id = "@+id/btnHighestAmount"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_margin = "8dp"
            android:layout_weight = "0.5"
            android:background = "@drawable/bg_arrange_button_unselected"
            android:gravity = "center"
            android:text = "@string/highest_amount"
            android:textColor = "@color/colorAccentSecondary"
            android:textSize = "18sp" />

        <TextView
            android:id = "@+id/btnLowestAmount"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_margin = "8dp"
            android:layout_weight = "0.5"
            android:background = "@drawable/bg_arrange_button_unselected"
            android:gravity = "center"
            android:text = "@string/lowest_amount"
            android:textColor = "@color/colorAccentSecondary"
            android:textSize = "18sp" />

    </LinearLayout>

</LinearLayout>